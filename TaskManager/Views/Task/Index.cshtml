@model IEnumerable<TaskManager.Models.Task>

@{
    ViewBag.Title = "Task List";
}

<h2>Task List</h2>

<p>
    @Html.ActionLink("Create New Task", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.DueDate)</th>
            <th>@Html.DisplayNameFor(model => model.IsCompleted)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => task.Title)</td>
                <td>@Html.DisplayFor(modelItem => task.Description)</td>
                <td>@Html.DisplayFor(modelItem => task.DueDate)</td>
                <td>@Html.DisplayFor(modelItem => task.IsCompleted)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = task.Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Details", "Details", new { id = task.Id }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = task.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
